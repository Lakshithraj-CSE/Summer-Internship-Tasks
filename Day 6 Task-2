const fileOperation=async()=>{
    try{
        const states = await read(`${__dirname}/states.txt`);
        const result = await write(`${__dirname}/test2.txt`,states);
        console.log(result);
        
    }
    catch(error){
        console.log(error);
    }
}
fileOperation();
